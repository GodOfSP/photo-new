<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".mine.SystemSettingAc">


    <RelativeLayout
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/com_toolbar" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bd_tel"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/head_view"
        android:background="@drawable/selector_full_white_r0"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:text="绑定手机号登录" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/next_btn" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/system_setting"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/head_view"
        android:background="@drawable/selector_full_white_r0"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:text="绑定手机号登录" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/next_btn" />

    </RelativeLayout>


    <TextView
        android:id="@+id/logout"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:textColor="@color/text_black"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bg_empty_gray_r0"
        android:text="退出登录" />


</android.support.constraint.ConstraintLayout>