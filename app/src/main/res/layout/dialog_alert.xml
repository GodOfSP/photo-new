<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="656dp"
    android:layout_height="410dp"
    android:background="@drawable/bg_dialog_white_r8"
    android:orientation="vertical">

    <View
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/bg_blue_full_r_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提示"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/head_view"
        app:layout_constraintLeft_toLeftOf="@+id/head_view"
        app:layout_constraintRight_toRightOf="@id/head_view"
        app:layout_constraintTop_toTopOf="@+id/head_view" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="@+id/head_view"
        app:layout_constraintTop_toTopOf="@id/head_view" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="内容"
        android:gravity="center"
        android:textColor="@color/bar_grey_90"
        android:textSize="22sp"
        android:layout_margin="20dp"
        android:padding="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="10dp"
        android:text="确认"
        android:gravity="center"
        android:textColor="@color/bar_grey_90"
        android:textSize="22sp"
        android:background="@drawable/bg_empty_gray_r0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="64dp"
        />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/bg_full_blue_r4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_commit"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>