<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <View
        android:id="@+id/view_body"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="44dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/head_pic" />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/head_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:actualImageScaleType="centerCrop"
        app:failureImage="@drawable/bg_blue_full_r_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundAsCircle="true" />


    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="asdsadasd"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_pic" />


    <View
        android:id="@+id/div_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="18dp"
        android:background="@color/colorInactive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <TextView
        android:id="@+id/txd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="提现到"
        android:textColor="@color/text_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/div_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div_1" />

    <TextView
        android:id="@+id/txd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:text="微信零钱"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/div_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div_1" />


    <View
        android:id="@+id/div_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="48dp"
        android:background="@color/colorInactive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div_1" />

    <TextView
        android:id="@+id/je_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="金额"
        android:textColor="@color/text_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/div_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div_2" />

    <TextView
        android:id="@+id/je_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="¥"
        android:textColor="@color/text_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/div_3"
        app:layout_constraintRight_toLeftOf="@+id/je"
        app:layout_constraintTop_toBottomOf="@+id/div_2" />

    <TextView
        android:id="@+id/je"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="21.05"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/div_3"
        app:layout_constraintRight_toLeftOf="@+id/je_r"
        app:layout_constraintTop_toBottomOf="@+id/div_2" />

    <TextView
        android:id="@+id/je_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:text="元"
        android:textColor="@color/text_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/div_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div_2" />

    <View
        android:id="@+id/div_3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="48dp"
        android:background="@color/colorInactive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div_2" />
    />


    <Button
        android:id="@+id/tx_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="32dp"
        android:background="@drawable/selector_full_green_r4"
        android:inputType="numberDecimal"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_body"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rhhdtx_title" />

</android.support.constraint.ConstraintLayout>