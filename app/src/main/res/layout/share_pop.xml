<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/friend_rl"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="158dp"
        android:background="@drawable/selector_full_white_r0"
        >
        <ImageView
            android:id="@+id/pic_iv"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/weichat"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="好友/群"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/pic_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_gray_dark" />
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/cicler_rl"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="158dp"
        android:background="@drawable/selector_full_white_r0"
        >
        <ImageView
            android:id="@+id/video_iv"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/friend"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="朋友圈"
            android:layout_marginLeft="12dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/video_iv"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_gray_dark" />

    </RelativeLayout>




</LinearLayout>