<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/pic_cl"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/selector_full_white_r0"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/pic_iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/photo_pic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/pic"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="照片"
            android:layout_marginLeft="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/pic_iv"
            android:textColor="@color/text_gray_dark" />
    </android.support.constraint.ConstraintLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorInactive" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/video_cl"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/selector_full_white_r0"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/video_iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/video_pic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/video"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="视频"
            android:layout_marginLeft="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/video_iv"
            android:textColor="@color/text_gray_dark" />
    </android.support.constraint.ConstraintLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorInactive" />

    <TextView
        android:background="@drawable/selector_full_white_r0"
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/text_gray" />

</LinearLayout>